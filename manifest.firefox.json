{
  "manifest_version": 3,
  "name": "YouTube Rabbit",
  "version": "1.0.0",
  "description": "YouTube playback speed control",
  "browser_specific_settings": {
    "gecko": {
      "id": "youtuberabbit@tprat",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://m.youtube.com/*"
  ],
  "background": {
    "scripts": ["background/background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://m.youtube.com/*"
      ],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "speed-up": {
      "suggested_key": {
        "default": "Alt+Up"
      },
      "description": "Increase speed"
    },
    "speed-down": {
      "suggested_key": {
        "default": "Alt+Down"
      },
      "description": "Decrease speed"
    }
  }
}
